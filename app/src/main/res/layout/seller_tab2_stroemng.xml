<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
            android:id="@+id/seller_store_mainimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/img_gopizza_main"
            />



    <LinearLayout
            android:id="@+id/seller_tab2_stroemng_linerlayout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_below="@+id/seller_store_mainimg">



        <TextView
                android:id="@+id/seller_tab2_introducestore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="매장소개"
                android:elevation="4dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/textview_line_style"
                android:layout_marginTop="6dp"/>

        <TextView
                android:id="@+id/seller_tab2_menumanagement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="메뉴관리"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@drawable/textview_line_style"
                android:layout_marginTop="8dp"/>

        <LinearLayout
                android:id="@+id/seller_tab2_stroemng_linerlayout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/seller_store_mainimg"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/textview_line_style"
                    android:elevation="4dp"
                    android:paddingRight="5dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="즐겨찾기"
                        android:layout_centerInParent="true"/>

                <TextView
                        android:id="@+id/seller_store_favorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="즐겨찾기수"
                        android:gravity="center"
                        android:background="@drawable/textview_circle_style"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:elevation="4dp"
                    android:background="@drawable/textview_line_style"
                    android:paddingRight="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매장평점"
                        android:layout_centerInParent="true"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/seller_store_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매장평점"
                        android:gravity="center"
                        android:background="@drawable/textview_circle_style"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>



        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textColor="@color/color10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"/>

       <!-- <TextView
                android:id="@+id/reviewex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="내용들 (작성자)"
                android:paddingLeft="13dp"/>

        <TextView
                android:id="@+id/reviewex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="내용들 (작성자)"
                android:paddingLeft="13dp"/>

        <TextView
                android:id="@+id/reviewex3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="내용들 (작성자)"
                android:paddingLeft="13dp"/>-->


    </LinearLayout>

    <Button
            android:id="@+id/seller_tab2_reviewmore"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="리뷰 더보기"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textview_circle_style"/>
</RelativeLayout>